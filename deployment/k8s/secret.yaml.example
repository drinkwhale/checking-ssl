apiVersion: v1
kind: Secret
metadata:
  name: ssl-monitoring-secrets
type: Opaque
stringData:
  # PostgreSQL 데이터베이스 연결 문자열
  # Kubernetes 내부에서 PostgreSQL Service 사용 시:
  # postgresql+asyncpg://username:password@postgresql:5432/ssl_monitoring
  #
  # 외부 PostgreSQL 사용 시:
  # postgresql+asyncpg://username:password@external-host:5432/ssl_monitoring
  database-url: "postgresql+asyncpg://ssl_monitor_user:change-this-password@postgresql:5432/ssl_monitoring"

  # Microsoft Teams 웹훅 URL (선택사항)
  # 예시: https://outlook.office.com/webhook/xxxxx
  teams-webhook-url: ""
